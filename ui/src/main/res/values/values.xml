    <style name="LAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor" ns1:targetApi="lollipop">@color/colorPrimaryDark
        </item>
        <!--<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary-->
        <!--</item>-->
    </style>
    <style name="BottomDialogTheme" parent="Animation.Design.BottomSheetDialog"/>
    <style name="ScanTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor" ns1:targetApi="lollipop">@color/colorPrimaryDark
        </item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    <style name="SwipeBackTheme" parent="LAppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>
