<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="use_type" format="integer">
        <enum name="use_height" value="0" />        <!--通过设置高度的方式-->
        <enum name="use_padding_top" value="1" />   <!--通过设置paddingTop的方式-->
